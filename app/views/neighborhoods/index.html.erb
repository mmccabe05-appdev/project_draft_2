<div>
  <div>
    <h1>
      List of all neighborhoods
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new neighborhood
    </h2>

    <form action="/insert_neighborhood" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="city_id_box">
          City
        </label>

        <input type="text" id="city_id_box" name="query_city_id">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="wiki_link_box">
          Wiki link
        </label>

        <input type="text" id="wiki_link_box" name="query_wiki_link">
      </div>

      <div>
        <label for="lat_box">
          Lat
        </label>

        <input type="text" id="lat_box" name="query_lat">
      </div>

      <div>
        <label for="lng_box">
          Lng
        </label>

        <input type="text" id="lng_box" name="query_lng">
      </div>

      <button>
        Create neighborhood
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          City
        </th>

        <th>
          Description
        </th>

        <th>
          Wiki link
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_neighborhoods.each do |a_neighborhood| %>
      <tr>
        <td>
          <%= a_neighborhood.id %>
        </td>

        <td>
          <%= a_neighborhood.name %>
        </td>

        <td>
          <%= a_neighborhood.city_id %>
        </td>

        <td>
          <%= a_neighborhood.description %>
        </td>

        <td>
          <%= a_neighborhood.wiki_link %>
        </td>

        <td>
          <%= a_neighborhood.lat %>
        </td>

        <td>
          <%= a_neighborhood.lng %>
        </td>

        <td>
          <%= time_ago_in_words(a_neighborhood.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_neighborhood.updated_at) %> ago
        </td>

        <td>
          <a href="/neighborhoods/<%= a_neighborhood.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
