<div>
  <div>
    <h1>
      List of all neighborhoods
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new neighborhood
    </h2>

    <form action="/insert_neighborhood" method="post">
      <div>
        <label for="name_box">
          Neighborhood Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control w-25">
      </div>

      <div>
        <label for="city_id_box" >
          City
        </label>

        <select id="city_id_box" name="query_city_id" class="form-select w-25">
          <% City.all.each do |a_city| %>

          <option value="<%= a_city.id %>"><%= a_city.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3" class="form-control w-25"></textarea>
      </div>

      <div>
        <label for="wiki_link_box">
          Wiki link
        </label>

        <input type="text" id="wiki_link_box" name="query_wiki_link" class="form-control w-25">
      </div>



      <button class="btn btn-primary m-2">
        Create neighborhood
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1" class="table table-striped table-hover">
      <tr>

        <th>
         City 
        </th>

        <th>
          Neighborhood Name
        </th>

        <th>
          Description
        </th>

        <th>
          Wiki link
        </th>



        <th>
        </th>
      </tr>

      <% @list_of_neighborhoods.order(:city_id=>"asc").each do |a_neighborhood| %>
      <tr>

        <td>
          <%= a_neighborhood.city.name %>
        </td>

        <td>
          <%= a_neighborhood.name %>
        </td>

        <td>
          <%= a_neighborhood.description %>
        </td>

        <td>
          <% if a_neighborhood.wiki_link.empty? %>
          <% else %>
          <a href="<%= a_neighborhood.wiki_link %>">link</a>
          <% end %>
        </td>



        <td>
          <a href="/neighborhoods/<%= a_neighborhood.id %>">
            More details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
