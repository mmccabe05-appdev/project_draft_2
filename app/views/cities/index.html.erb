<div>
  <div>
    <h1>
      List of all cities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new city
    </h2>

    <form action="/insert_city" method="post">
      <div >
        <label for="name_box" class="form-label">
          City Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control w-25">
      </div>

      <div class="w-25">
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state" class="form-control">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea type="text" id="description_box" name="query_description" class="form-control w-25"></textarea>
      </div>

      <div>
        <label for="wiki_link_box">
          Wiki link
        </label>

        <input type="text" id="wiki_link_box" name="query_wiki_link" class="form-control w-25">
      </div>



      <button class="btn btn-primary m-2">
        Create New City
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1" class="table table-striped table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          State
        </th>

        <th>
          Description
        </th>

        <th>
          Wiki link
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_cities.each do |a_city| %>
      <tr>
        <td>
          <%= a_city.id %>
        </td>

        <td>
          <%= a_city.name %>
        </td>

        <td>
          <%= a_city.state %>
        </td>

        <td>
          <%= a_city.description %>
        </td>

        <td>
          <%= a_city.wiki_link %>
        </td>

        <td>
          <%= a_city.lat %>
        </td>

        <td>
          <%= a_city.lng %>
        </td>

        <td>
          <%= time_ago_in_words(a_city.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_city.updated_at) %> ago
        </td>

        <td>
          <a href="/cities/<%= a_city.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
