<div>
  <div>
    <h1>
      List of all cities <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        add your own
      </button>
    </h1>
  </div>
</div>



<div>
  <div>
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Add a new neighborhood</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div >
              <% if @current_user.id == 1 %>
                Since you're currently signed in as: 
                <%= @current_user.first_name %> <%= @current_user.last_name %></a> you can 
    <h2>
      Add a new city
    </h2>

    <form action="/insert_city" method="post">
      <div >
        <label for="name_box" class="form-label">
          City Name
        </label>

        <input type="text" id="name_box" name="query_name" class="form-control ">
      </div>

      <div class="">
        <label for="state_box">
          State
        </label>

        <input type="text" id="state_box" name="query_state" class="form-control">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea type="text" id="description_box" name="query_description" class="form-control "></textarea>
      </div>

      <div>
        <label for="wiki_link_box">
          Wiki link
        </label>

        <input type="text" id="wiki_link_box" name="query_wiki_link" class="form-control ">
      </div>



      <button class="btn btn-primary m-2">
        Create New City
      </button>
    </form>
    <% else %>
      Sorry, only admin can add new cities
    <% end %></div>
    </div></div>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1" class="table table-striped table-hover">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          State
        </th>

        <th>
          Description
        </th>

        <th>
          Wiki link
        </th>

        <th>
          Lat
        </th>

        <th>
          Lng
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_cities.each do |a_city| %>
      <tr>
        <td>
          <%= a_city.id %>
        </td>

        <td>
          <%= a_city.name %>
        </td>

        <td>
          <%= a_city.state %>
        </td>

        <td>
          <%= a_city.description %>
        </td>

        <td>
          <% if a_city.wiki_link.empty? %>
          <% else %>
          <a href="<%= a_city.wiki_link %>" target="new">link</a>
          <% end %>
        </td>

        <td>
          <%= a_city.lat %>
        </td>

        <td>
          <%= a_city.lng %>
        </td>

        <td>
          <%= time_ago_in_words(a_city.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_city.updated_at) %> ago
        </td>

        <td>
          <a href="/cities/<%= a_city.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
